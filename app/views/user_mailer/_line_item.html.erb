<% if product = Product.find_by(id: line_item.product_id) %>

  <tr>
    <td>
      <%= image_tag product.image.tiny %>
    </td>
    <td>
      <h4><%= product.name %></h4>
    </td>
    <td>
      <%= product.price %>
    </td>
    <td>
      <%= line_item.quantity %>
    </td>
    <td>
      <%= line_item.total_price_cents / 100.00 %>
    </td>
  </tr>
<% end %>
